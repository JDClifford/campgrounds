<%- include("partials/header") %>

<div class="container">
  <div class="jumbotron">
      <div class="container">
        <h1 class="display-4">Welcome to Yelpcamp</h1>
        <p class="lead">View our hand-picked campgrounds from all over the world</p>
        <p><a class="btn btn-info btn-md" href="/campgrounds/new" role="button">Add a campground</a></p>
      </div>
  </div>

  <div class="row d-flex align-items-start">
    <% list.forEach(campground => { %>
        <div class="col-md-3 card text-center mb-4">
         <img class="card-img-top" src="<%= campground.image %>">
d          <div class="card-body">
            <h5 class="card-title"><%- campground.name %></h5>
          </div>          
        </div>
    <% }) %>
  </div>
</div>



<%- include("partials/footer") %>