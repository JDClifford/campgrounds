<%- include("../partials/header") %>

<div class="mx-auto mt-5" style="width: 30%;">
    <h2 style="text-align:center">New comment for </br><em>"<%= campground.name %>"</em>:</h2>
    <form action="/campgrounds/<%= campground.id %>/comments" method="post">
        <div class="form-group">
            <textarea class="form-control" name="comment[text]" placeholder="Comment"></textarea>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="comment[author]" placeholder="Author"></textarea>
        </div>
        <button class="btn btn-md btn-primary btn-block">Submit</button>


    </form>
<a href="/campgrounds">Go back</a>
</div>


